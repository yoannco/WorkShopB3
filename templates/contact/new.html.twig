{% extends 'base.html.twig' %}

{% block title %}Nouveau contact{% endblock %}

{% block banniere %}
    <img src="/assets/img/BannerContact.png" class="img-fluid" alt="Responsive image">
{% endblock %}

{% block body %}
<div class="text-center">

    {# {{ include('contact/_form.html.twig') }} #}
         {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.titre, 'Objet de la demande (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group text-center">
            {{ form_label(form.contenu, 'Votre message (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group text-center">
            {{ form_label(form.user, 'Votre nom (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group text-center">
            {{ form_label(form.type, 'Type de demande (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mx-auto text-center">
            {{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn btn-primary mx-auto text-center'}}) }}
        </div>
    {{ form_end(form) }}

    {# <a href="{{ path('contact_index') }}">back to list</a> #}
    
</div>
{% endblock %}
