{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}


{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>User</th>
                {# <th>Type</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.titre }}</td>
                <td>{{ contact.contenu }}</td>
                <td>{{ contact.user }}</td>
                {# <td>{{ contact.type }}</td> #}
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">En voir plus</a>
                    {# <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('contact_new') }}">Create new</a> #}
{% endblock %}
