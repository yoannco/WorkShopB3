{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}
{% block banniere %}

    <img src="/assets/img/BannerAccueil.png" class="img-fluid" alt="Responsive image">

{% endblock %}
{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.contents }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">En voir plus</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier l'article</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Cr√©er un nouvel article</a>
{% endblock %}
