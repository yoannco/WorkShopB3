{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ document.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_index') }}">back to list</a>

    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}

    <div class="row justify-content-center">
        <form method="post" action="{{ asset('document/' ~ document.link) }}">
            <button type="submit" class="btn btn-primary" name="" id="" href="">
                Afficher le document
            </button>
        </form>
        <div class="col-12 text-center justify-content-center mt-3">
            <form method="post" action="{{ asset('document/' ~ document.link) }}">
                <button type="submit" class="btn btn-primary" name="btDownload" id="btDownload" href="">
                    Télécharger le document
                </button>
            </form>
        </div>
    </div>
{% endblock %}
